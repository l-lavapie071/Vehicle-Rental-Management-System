@{
    Layout = "_Layout";
}
@model Vehicle_Rental_Management_System.Models.Vehicle
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html>
<head>
    <title>@Model.Make - @Model.Model</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-4">
        <h2 class="mb-3">Vehicle Details</h2>

        <div class="card">
            <div class="row g-0">
                <div class="col-md-4 d-flex justify-content-center align-items-center">
                    <img src="@Model.ImageUrl" class="img-fluid rounded-start" alt="@Model.Make @Model.Model" style="max-height: 200px; object-fit: cover;">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h4 class="card-title">
                            @Model.Make - @Model.Model

                            <!-- Delete button with confirmation -->
                            <form asp-controller="Vehicle" asp-action="DeleteVehicle" asp-route-id="@Model.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this vehicle?');">
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </h4>
                        <p><strong>Year:</strong> @Model.Year</p>
                        <p><strong>License Plate:</strong> @Model.LicensePlate</p>
                        <p><strong>Mileage:</strong> @Model.Mileage.ToString("N0") km</p>
                        <p><strong>Rental Price per Day:</strong> @Model.RentalPricePerDay.ToString("C2")</p>
                        <p><strong>Description:</strong> @Model.Description</p>
                        <p>
                            <strong>Availability:</strong>
                            @if (Model.IsAvailable)
                            {
                                <span class="badge bg-success">Available</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Not Available</span>
                            }
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <a asp-controller="vehicle" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary mt-3">Edit</a>
        <a href="javascript:history.back()" class="btn btn-primary mt-3">Back</a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
