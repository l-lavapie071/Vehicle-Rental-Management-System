@{
    Layout = "_Layout";
}
@model Vehicle_Rental_Management_System.Models.Customer
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html>
<head>
    <title>@Model.FirstName @Model.MiddleName @Model.LastName</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-4">
        <h2 class="mb-3">Customer Details</h2>

        <div class="card">
            <div class="row g-0">
                <div class="col-md-8">
                    <div class="card-body">
                        <h4 class="card-title">
                            @Model.FirstName @Model.MiddleName @Model.LastName
                            <!-- Delete button with confirmation -->
                            <form asp-controller="customer" asp-action="DeleteCustomer" asp-route-id="@Model.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this customer?');">
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </h4>

                        <p><strong>Email:</strong> @Model.Email</p>
                        <p><strong>Phone Number:</strong> @Model.PhoneNumber</p>
                        <p><strong>Address:</strong> @Model.Address</p>
                    </div>
                </div>
            </div>
        </div>

        <a asp-controller="customer" asp-action="EditCustomer" asp-route-id="@Model.Id" class="btn btn-primary mt-3">Edit</a>
        <a href="javascript:history.back()" class="btn btn-primary mt-3">Back</a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
