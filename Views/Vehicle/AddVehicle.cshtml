@using Vehicle_Rental_Management_System.Models
@model Vehicle_Rental_Management_System.Models.ViewModels.VehicleFormVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html>
<head>
    <title>Vehicle Rental Management</title>
    <link href="~/css/login.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <div class="form-container mx-auto">
            <h2 class="mb-4 text-center">Add Vehicle</h2>

            <form asp-action="AddVehicle" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Make" class="control-label">Make</label>
                    <input asp-for="Make" class="form-control" placeholder="Enter vehicle make" aria-label="Vehicle Make" />
                    <span asp-validation-for="Make" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Model" class="control-label">Model</label>
                    <input asp-for="Model" class="form-control" placeholder="Enter vehicle model" aria-label="Vehicle Model" />
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Year" class="control-label">Year</label>
                    <input asp-for="Year" class="form-control" placeholder="Enter vehicle year" aria-label="Vehicle Year" />
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="LicensePlate" class="control-label">License Plate</label>
                    <input asp-for="LicensePlate" class="form-control" placeholder="Enter license plate" aria-label="License Plate" />
                    <span asp-validation-for="LicensePlate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Mileage" class="control-label">Mileage</label>
                    <input asp-for="Mileage" class="form-control" placeholder="Enter mileage" aria-label="Mileage" />
                    <span asp-validation-for="Mileage" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="RentalPricePerDay" class="control-label">Rental Price Per Day</label>
                    <input asp-for="RentalPricePerDay" class="form-control" placeholder="Enter rental price per day" aria-label="Rental Price Per Day" />
                    <span asp-validation-for="RentalPricePerDay" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label">Description</label>
                    <textarea asp-for="Description" class="form-control" placeholder="Enter vehicle description" aria-label="Vehicle Description"></textarea>
                </div>

                <div class="form-group">
                    <label asp-for="ImageFile" class="control-label">Upload Image</label>
                    <input asp-for="ImageFile" type="file" class="form-control" aria-label="Upload Image" />
                    
                </div>

                <div class="form-group mt-3 text-center">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a asp-action="VehicleList" class="btn btn-secondary ms-2">Back</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>