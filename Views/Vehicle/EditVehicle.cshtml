@{
    Layout = "_Layout";
}
@model Vehicle_Rental_Management_System.Models.Vehicle
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html>
<head>
    <title>Edit @Model.Make - @Model.Model</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />
</head>
<body>
    <div class="container mt-4">
        <h2 class="mb-3 text-center">Edit Vehicle Details</h2>

        <form asp-action="Edit" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data">
            <div class="card">
                <div class="row g-0">
                    <div class="col-md-8 mx-auto">
                        <div class="card-body">
                            <div class="mb-3">
                                <label for="Make" class="form-label">
                                    <i class="bi bi-car-front"></i> Make
                                </label>
                                <input type="text" class="form-control w-100" id="Make" name="Make" value="@Model.Make" required />
                            </div>
                            <div class="mb-3">
                                <label for="Model" class="form-label">
                                    <i class="bi bi-car"></i> Model
                                </label>
                                <input type="text" class="form-control w-100" id="Model" name="Model" value="@Model.Model" required />
                            </div>
                            <div class="mb-3">
                                <label for="Type" class="form-label">
                                    <i class="bi bi-tags"></i> Type
                                </label>
                                <input type="text" class="form-control w-100" id="Type" name="Type" value="@Model.Type" required />
                            </div>
                            <div class="mb-3">
                                <label for="Year" class="form-label">
                                    <i class="bi bi-calendar-year"></i> Year
                                </label>
                                <input type="number" class="form-control w-100" id="Year" name="Year" value="@Model.Year" required />
                            </div>
                            <div class="mb-3">
                                <label for="LicensePlate" class="form-label">
                                    <i class="bi bi-card-checklist"></i> License Plate
                                </label>
                                <input type="text" class="form-control w-100" id="LicensePlate" name="LicensePlate" value="@Model.LicensePlate" readonly />
                            </div>
                            <div class="mb-3">
                                <label for="Mileage" class="form-label">
                                    <i class="bi bi-speedometer"></i> Mileage (km)
                                </label>
                                <input type="number" class="form-control w-100" id="Mileage" name="Mileage" value="@Model.Mileage" required />
                            </div>
                            <div class="mb-3">
                                <label for="RentalPricePerDay" class="form-label">
                                    <i class="bi bi-currency-dollar"></i> Rental Price per Day
                                </label>
                                <input type="number" class="form-control w-100" id="RentalPricePerDay" name="RentalPricePerDay" value="@Model.RentalPricePerDay" required />
                            </div>
                            <div class="mb-3">
                                <label for="Description" class="form-label">
                                    <i class="bi bi-file-earmark-text"></i> Description
                                </label>
                                <textarea class="form-control w-100" id="Description" name="Description" rows="3">@Model.Description</textarea>
                            </div>
                            <div class="mb-3">
                                <label for="IsAvailable" class="form-label">
                                    <i class="bi bi-check-circle"></i> Availability
                                </label>
                                <select class="form-select" id="IsAvailable" asp-for="IsAvailable">
                                    <option value="true">Available</option>
                                    <option value="false">Not Available</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="Image" class="form-label">
                                    <i class="bi bi-image"></i> Upload New Image (Optional)
                                </label>
                                <input type="file" class="form-control w-100" id="Image" name="Image" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Save Changes
                </button>
                <a href="javascript:history.back()" class="btn btn-secondary ms-2">
                    <i class="bi bi-arrow-left-circle"></i> Cancel
                </a>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
