@{
    Layout = "_Layout";
}
@model Vehicle_Rental_Management_System.Models.Customer
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html>
<head>
    <title>@Model.FirstName @Model.MiddleName @Model.LastName</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
</head>
<body>
    <div class="container mt-4">
        <h2 class="mb-3"><i class="bi bi-person-lines-fill text-primary"></i> Customer Details</h2>

        <div class="card shadow-sm">
            <div class="row g-0">
                <div class="col-md-12">
                    <div class="card-body">
                        <h4 class="card-title d-flex justify-content-between align-items-center">
                            <span>
                                <i class="bi bi-person-circle"></i>
                                @Model.FirstName @Model.MiddleName @Model.LastName
                            </span>
                            <form asp-controller="customer" asp-action="DeleteCustomer" asp-route-id="@Model.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this customer?');">
                                <button type="submit" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash3-fill"></i> Delete
                                </button>
                            </form>
                        </h4>

                        <p><i class="bi bi-envelope-fill"></i> <strong>Email:</strong> @Model.Email</p>
                        <p><i class="bi bi-telephone-fill"></i> <strong>Phone Number:</strong> @Model.PhoneNumber</p>
                        <p><i class="bi bi-geo-alt-fill"></i> <strong>Address:</strong> @Model.Address</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-3">
            <a asp-controller="customer" asp-action="EditCustomer" asp-route-id="@Model.Id" class="btn btn-primary me-2">
                <i class="bi bi-pencil-square"></i> Edit
            </a>
            <a href="javascript:history.back()" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> Back
            </a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
