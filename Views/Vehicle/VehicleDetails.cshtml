@{
    Layout = "_Layout";
}
@model Vehicle_Rental_Management_System.Models.Vehicle
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html>
<head>
    <title>@Model.Make - @Model.Model</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />
</head>
<body>
    <div class="container mt-4">
        <h2 class="mb-3 text-center">Vehicle Details</h2>

        <div class="card">
            <div class="row g-0">
                <div class="col-md-4 d-flex justify-content-center align-items-center">
                    <img src="@Model.ImageUrl" class="img-fluid rounded-start" alt="@Model.Make @Model.Model" style="max-height: 200px; object-fit: cover;">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h4 class="card-title">
                            @Model.Make - @Model.Model

                            <!-- Delete button with confirmation and icon -->
                            <form asp-controller="Vehicle" asp-action="DeleteVehicle" asp-route-id="@Model.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this vehicle?');">
                                <button type="submit" class="btn btn-sm btn-danger ms-2">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </button>
                            </form>
                        </h4>
                        <p><i class="bi bi-tags"></i> <strong>Type:</strong> @Model.Type</p>
                        <p><i class="bi bi-calendar-year"></i> <strong>Year:</strong> @Model.Year</p>
                        <p><i class="bi bi-card-checklist"></i> <strong>License Plate:</strong> @Model.LicensePlate</p>
                        <p><i class="bi bi-speedometer"></i> <strong>Mileage:</strong> @Model.Mileage.ToString("N0") km</p>
                        <p><i class="bi bi-currency-dollar"></i> <strong>Rental Price per Day:</strong> @Model.RentalPricePerDay.ToString("C2")</p>
                        <p><i class="bi bi-file-earmark-text"></i> <strong>Description:</strong> @Model.Description</p>
                        <p>
                            <i class="bi bi-check-circle"></i> <strong>Availability:</strong>
                            @if (Model.IsAvailable)
                            {
                                <span class="badge bg-success">Available</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Not Available</span>
                            }
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Edit button with icon -->
        <a asp-controller="vehicle" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary mt-3">
            <i class="bi bi-pencil-square"></i> Edit
        </a>

        <!-- Back button with icon -->
        <a href="javascript:history.back()" class="btn btn-secondary mt-3">
            <i class="bi bi-arrow-left-circle"></i> Back
        </a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
