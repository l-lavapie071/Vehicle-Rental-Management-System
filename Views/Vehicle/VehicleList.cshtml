@{
    Layout = "_Layout";
}

@using Vehicle_Rental_Management_System.Models;
@model List<Vehicle>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html>
<head>
    <title>Vehicle List</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-4">
        <h2 class="mb-3">Vehicle List</h2>
        <!-- Search Form -->
        @* <form asp-controller="book" asp-action="Search" method="get" class="mb-3">
            <div class="input-group">
                <input type="text" name="query" class="form-control" placeholder="Search by title, author, or genre..." />
                <button type="submit" class="btn btn-outline-primary">Search</button>
            </div>
        </form> *@
        <table class="table table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Id</th>
                    <th>Make</th>
                    <th>Model</th>
                    <th>Year</th>
                    <th>License Plate</th>
                    <th>Mileage</th>
                    <th>Rental Price Per Day</th>
                    <th>Description</th>
                    <th>Availability</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Vehicle in Model)
                {
                    <tr>
                        <td>@Vehicle.Id</td>
                        <td>@Vehicle.Make</td>
                        <td>@Vehicle.Model</td>
                        <td>@Vehicle.Year</td>
                        <td>@Vehicle.LicensePlate</td>
                        <td>@Vehicle.Mileage.ToString("N0") km</td>
                        <td>@Vehicle.RentalPricePerDay.ToString("C")</td>
                        <td>@Vehicle.Description</td>
                        <td>
                            @if (Vehicle.IsAvailable)
                            {
                                <span class="badge bg-success">Available</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Not Available</span>
                            }
                        </td>
                        <td>
                            <a asp-controller="vehicle" asp-action="VehicleDetails" asp-route-id="@Vehicle.Id">View Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a class="btn btn-primary" asp-controller="vehicle" asp-action="AddVehicle">Add</a>
    </div>
</body>
</html>
